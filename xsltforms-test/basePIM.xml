<?xml-stylesheet href="xsltforms/xsltforms.xsl" type="text/xsl"?>
<html 
xmlns="http://www.w3.org/1999/xhtml" 
xmlns:xf="http://www.w3.org/2002/xforms" 
xmlns:ev="http://www.w3.org/2001/xml-events" 
xmlns:xs="http://www.w3.org/2001/XMLSchema"
>
   <head>
      <title>BasePIM XSLTForms</title>

      <xf:model xmlns:xf="http://www.w3.org/2002/xforms">
        <xf:instance xmlns="">
          <property name="dimensions" inheritable="true">
            <value>
              <slot lang="any">
                <width>
                  <num>100</num>
                  <unit>mm</unit>
                </width>
                <height>
                  <num>500</num>
                  <unit>mm</unit>
                </height>
                <length>
                  <num>100</num>
                  <unit>mm</unit>
                </length>
              </slot>
            </value>
          </property>
        </xf:instance>
        <xf:bind nodeset="value/slot/width/num" type="xs:byte"/>
        <xf:bind nodeset="value/slot/height/num" type="xs:integer"/>
        <xf:bind nodeset="value/slot/length/num" type="xs:integer"/>

	<xf:submission id="save" method="post" action="http://localhost/myData.xml" ref="//slot"/>
      </xf:model>
   </head>
   <body>

     <p>XPath selected width:
  	<br />
        <xf:input ref="value/slot/width/num" incremental="true">
          <xf:label>Enter a dimension: </xf:label>
        </xf:input>
     </p>

     <hr/>

     <p>
     <xf:output value="value/slot/width/num">
     	<xf:label>XPath selected width (out): </xf:label>
     	<xf:help>Description of XPath Width</xf:help>
     </xf:output>
     </p>

     <xf:submit submission="save">
       <xf:label>Save</xf:label>
     </xf:submit>

   </body>

</html>

