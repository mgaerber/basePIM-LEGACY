                </property>
                <property name="key-feature">
                    <value lang="en">clean</value>
                </property>
                <property name="key-feature">
                    <value lang="en">quiet</value>
                </property>
                
                <!-- compound values ? -->
                <property name="temperature-range">
                    <value>-10 °C ... 60 °C</value>
                </property>
                <!-- or -->
                <property name="dimensions">
                    <value>
                        <height></height>
                        <width></width>
                        <length></length>
                    </value>
                </property>
                
                <property name="art-nr">
